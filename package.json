{
  "private": true,
  "scripts": {
    "build": "pnpm run build:ts",
    "build:clean": "bash -c \"find {examples,packages} -path '*node_modules*' -prune -o -name 'dist' -type d -exec rm -rf {} +\"",
    "build:ts": "tsc --build tsconfig.all.json",
    "dev:ts": "pnpm run build:ts --watch",
    "lint:check": "eslint examples packages --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint examples packages --ext .ts,.tsx --fix",
    "release:patch": "pnpm run build && pnpm --filter '@livestore/*' --filter 'effect-db-schema' exec -- npm version patch --no-workspaces-update && pnpm --filter '@livestore/*' --filter 'effect-db-schema' exec -- pnpm publish --no-git-checks",
    "release:dev": "pnpm run build && pnpm --filter '@livestore/*' --filter 'effect-db-schema' exec -- npm version patch --no-workspaces-update && pnpm --filter '@livestore/*' --filter 'effect-db-schema' exec -- pnpm publish  --tag dev --no-git-checks",
    "test": "CI=true pnpm --parallel run test"
  },
  "resolutions": {
    "@livestore/livestore": "workspace:*",
    "@livestore/*": "workspace:*",
    "@livestore/devtools-react": "latest",
    "effect": "2.0.0-next.62",
    "effect-db-schema": "workspace:*"
  },
  "dependencies": {
    "@effect/language-service": "^0.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unicorn": "^49.0.0",
    "prettier": "^3.1.1",
    "prettier-plugin-packagejson": "^2.4.7",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.8.0",
  "pnpm": {
    "patchedDependencies": {
      "drizzle-orm@0.28.6": "patches/drizzle-orm@0.28.6.patch",
      "effect@2.0.0-next.62": "patches/effect@2.0.0-next.62.patch"
    }
  }
}
